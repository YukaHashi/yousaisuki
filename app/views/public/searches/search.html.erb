<div class="container">
  <h3>検索結果</h3>
  <table class="table tabke-hover table-inverse">
    <!--検索対象モデルがUserのとき-->
    <% if @range == "User" %>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>