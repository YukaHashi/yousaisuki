<div class='container px-5 px-sm-0'>
  <%= flash[:notice] %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>ユーザー</h2>
      <%= render 'users/mypage', user: current_user %>
      
      <h2 class="mt-3">新規投稿</h2>
      <%= render 'posts/new', post: @post %>
    </div>
    
    <div class='col-md-8 offset-md-1'>
      <h2>グループ詳細</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th colspa="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if @group.group_image.attached? %>
                <%= image_tag @group.group_image,size:"50x50" %>
              <% else %>
                <%= image_tag 'no_image', size: "50x50" %>
              <% end %>
            </td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
            
            <%= if @group.owner_id == current.user.id %>
              <td>
                <%= link_to '編集', edit_group_path(@group), class: "btn btn-sm btn-success" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>