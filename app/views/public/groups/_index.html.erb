<div>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>グループ名</th>
        <th>紹介文</th>
        <th>メンバー</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    
    <tbody>
      <% groups.each do |group| %>
        <tr>
          <td>
            <% if group.group_image.attached? %>
              <%= image_tag group.group_image,size:"80x80", class: "rounded-circle content-center"; %>
            <% else %>
              <%= image_tag 'no_image.jpg', size: "80x80", class: "rounded-circle content-center" %>
            <% end %>
          </td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td><%= group.introduction %></td>
          <td><%= group.group_users.count %></td>
          
          <% if group.owner_id == current_user.id %>
            <td>
              <%= link_to '編集', edit_group_path(group), class: "btn btn-sm btn-primary" %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= paginate @groups, theme: 'twitter-bootstrap-4' %>
</div>