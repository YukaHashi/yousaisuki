<% if @group.errors.any? %>
  <%= @group.errors.count %>件のエラーが発生しました
  <ul>
    <% @group.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container mt-5 my-3 ml-3 mr-3">
  <%= form_with model: @group, url: group_path(@group.id) do |f| %>
    <div class="form-group">
      <%= f.label :グループ名 %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :紹介文 %>
      <%= f.text_area :introduction, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :グループ画像 %>
      <%= f.file_field :group_image, class: "form-control-file" , accept: "image/jpeg" %>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>