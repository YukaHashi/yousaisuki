  <h3>ユーザー投稿一覧</h3>
  <!-- ユーザーの投稿一覧 -->
  <div class="card-list-container py-3 d-flex flex-wrap justify-content-start">
    <% @post.each do |post| %>
    <div class="card mt-3 my-3 ml-3 mr-3 shadow-lg" style="height: 350px; width: 350px;">
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image, size: "150x200", class: "card-img-top"; %>
      <% end %>
      <div class="row align-items-center">
        <div class="col-4 mx-auto text-center">
          <%= image_tag post.user.get_profile_image(80,80), class: "mt-3 rounded-circle content-center"; %>
        </div>
        <div class="col-8">
          <p class="card-title">タイトル：
            <%= link_to(post_path(post.id), class: "text-dark") do %>
              <%= truncate(post.title, length: 20) %>
            <% end %>
          </p>
          <p class="card-text">説明：<%= truncate(post.body, length: 20) %></p>
          <span><i class="fas fa-user"></i> By <%= post.user.name %> | </span>
          <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class: "text-dark" %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <div class="text-center">
    <%= paginate @posts, theme: 'twitter-bootstrap-4'%>
  </div>