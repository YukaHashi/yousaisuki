<div class="container">
  <h3>プロフィール編集</h3>
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user do |f| %>
      <div class="container mt-3 my-3">
        <p><label for="inputName">名前</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </p>
        <p><label for="inputEmail">メールドレス</label><br>
          <%= f.text_field :email %>
        </p>
        <p><label for="inputImage">プロフィール画像</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </p>
        <p><%= f.submit "更新", class: "btn btn-primary" %></p>
      </div>
      <div class="container mt-3 my-3">
        <% if @user.id == current_user.id %>
          <%= link_to "退会する", users_check_path(@user.id), class: "btn btn-danger" %>
        <% end %>
      </div>
    <% end %>
</div>