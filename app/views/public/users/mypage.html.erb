<div class="container">
    <h3>マイページ</h3>
    <!-- ユーザーの詳細 -->
    <div>
      <div class="container my-3 ml-3 mr-3">
        <h2><%= @user.name %></h2>
          <%= image_tag @user.get_profile_image(100,100), class: "mt-3 rounded-circle content-center"; %>
          <% if @user == current_user %>
            <div>
              <p><%= link_to "投稿一覧", user_path(@user.id) %></p>
              <p><%= link_to "プロフィール編集", edit_user_path(@user.id) %></p>
              <p><%= link_to "グループを作成する", new_group_path %>|
                 <%= link_to "グループ一覧", groups_path %></p>
              <p><%= link_to "退会する", users_check_path(@user.id) %></p>
            </div>
         <% end %>
      </div>
    </div>
</div>