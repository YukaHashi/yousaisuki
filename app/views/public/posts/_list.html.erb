<div class="card-list-container py-5 d-flex flex-wrap justify-content-start">
  <% @posts.each do |post| %>
  <div class="card mt-4 shadow-lg ml-2 mr-2" style="height: 350px; width: 300px;">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, size: "100x200", class: "card-img-top"; %>
    <% end %>
    <div class="row align-items-center">
      <div class="col-3 mx-auto text-center">
        <%= image_tag post.user.get_profile_image(80,80), class: "mt-3 rounded-circle content-center"; %>
      </div>
      <div class="col-9">
        <p class "card-title">タイトル：
          <%= link_to(post_path(post.id), class: "text-dark") do %>
            <%= truncate(post.title, length: 20) %>
          <% end %>
        </p>
        <p class="card-text">説明：<%= truncate(post.body, length: 20) %></p>
        <span><i class="fas fa-user"></i> By <%= post.user.name %> | </span>
        <span><%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class: "text-dark" %></span>
      </div>
    </div>
  </div>
  <% end %>
</div>